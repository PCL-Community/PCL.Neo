<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCL.Neo.ViewModels.Home"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PCL.Neo.Views.Home.OverviewView"
             x:DataType="vm:GameSettingsViewModel">
    
    <StackPanel Margin="20" Spacing="15">
        <!-- 版本信息面板 -->
        <Border Background="White"
                CornerRadius="4"
                Padding="15"
                BoxShadow="0 2 10 0 #20000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 版本图标 -->
                <Image Grid.Column="0"
                       Source="avares://PCL.Neo/Assets/Icon.ico"
                       Width="32"
                       Height="32"
                       Margin="0,0,15,0"
                       VerticalAlignment="Top"/>
                
                <!-- 版本信息 -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding PackageName}" 
                               FontSize="16" 
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding PackageDescription}" 
                               Foreground="#616161"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 个性化面板 -->
        <Border Background="White"
                CornerRadius="4"
                Padding="15"
                BoxShadow="0 2 10 0 #20000000">
            <StackPanel>
                <TextBlock Text="个性化" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="0,5">
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="图标:" 
                               VerticalAlignment="Center" 
                               Width="100"/>
                    
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              SelectedItem="{Binding CustomIcon}" 
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="自动"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="分类:" 
                               VerticalAlignment="Center" 
                               Margin="0,15,0,0" 
                               Width="100"/>
                    
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                              SelectedItem="{Binding CustomCategory}" 
                              HorizontalAlignment="Stretch" 
                              Margin="0,15,0,0">
                        <ComboBoxItem Content="自动"/>
                    </ComboBox>
                </Grid>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,15,0,0" 
                            Spacing="10">
                    <Button Content="修改版本名" 
                            Command="{Binding EditVersionNameCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="修改版本描述" 
                            Command="{Binding EditVersionDescriptionCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="加入收藏夹" 
                            Command="{Binding AddToCollectionCommand}" 
                            Width="120" 
                            Height="36"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 快捷方式面板 -->
        <Border Background="White"
                CornerRadius="4"
                Padding="15"
                BoxShadow="0 2 10 0 #20000000">
            <StackPanel>
                <TextBlock Text="快捷方式" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Spacing="10">
                    <Button Content="版本文件夹" 
                            Command="{Binding OpenVersionFolderCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="存档文件夹" 
                            Command="{Binding OpenSaveFolderCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="Mod 文件夹" 
                            Command="{Binding OpenModFolderCommand}" 
                            Width="120" 
                            Height="36"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 高级管理面板 -->
        <Border Background="White"
                CornerRadius="4"
                Padding="15"
                BoxShadow="0 2 10 0 #20000000">
            <StackPanel>
                <TextBlock Text="高级管理" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Spacing="10">
                    <Button Content="导出启动脚本" 
                            Command="{Binding ExportStarterCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="测试游戏" 
                            Command="{Binding TestGameCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="补全文件" 
                            Command="{Binding CompleteFilesCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="重装" 
                            Command="{Binding ReinstallCommand}" 
                            Width="120" 
                            Height="36"/>
                    
                    <Button Content="删除版本" 
                            Command="{Binding DeleteVersionCommand}" 
                            Width="120" 
                            Height="36"
                            Background="#EF5350"
                            Foreground="White">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#E53935"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl> 