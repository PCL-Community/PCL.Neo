<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCL.Neo.ViewModels.Home"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PCL.Neo.Views.Home.SettingsView"
             x:DataType="vm:GameSettingsViewModel">
    
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            <!-- 提示信息 -->
            <Border Background="#E3F2FD"
                    CornerRadius="4"
                    Padding="12"
                    BorderBrush="#2196F3"
                    BorderThickness="0,0,0,0">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Path Grid.Column="0"
                          Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                          Fill="#2196F3"
                          Width="16"
                          Height="16"
                          Margin="0,0,8,0"/>
                    
                    <TextBlock Grid.Column="1"
                              Text="这些设置只对该游戏版本生效，不影响其他版本。"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2"
                            Content="×"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="4"
                            Foreground="#2196F3"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>
            
            <!-- 启动选项 -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <StackPanel>
                    <TextBlock Text="启动选项" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,5">
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="版本隔离:" 
                                   Width="100"
                                   VerticalAlignment="Center"/>
                        
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  SelectedItem="{Binding LaunchMode}" 
                                  HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="开启"/>
                        </ComboBox>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="游戏窗口标题:" 
                                   Width="100"
                                   VerticalAlignment="Center"
                                   Margin="0,15,0,0"/>
                        
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding GameWindowTitle}" 
                                 Margin="0,15,0,0"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="自定义信息:" 
                                   Width="100"
                                   VerticalAlignment="Center"
                                   Margin="0,15,0,0"/>
                        
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding CustomGameInfo}" 
                                 Margin="0,15,0,0"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="游戏 Java:" 
                                   Width="100"
                                   VerticalAlignment="Center"
                                   Margin="0,15,0,0"/>
                        
                        <ComboBox Grid.Row="3" Grid.Column="1" 
                                  SelectedItem="{Binding GameJava}" 
                                  HorizontalAlignment="Stretch"
                                  Margin="0,15,0,0">
                            <ComboBoxItem Content="跟随全局设置"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 游戏内存 -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <StackPanel>
                    <TextBlock Text="游戏内存" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <StackPanel Margin="0,5,0,10">
                        <RadioButton Content="跟随全局设置"
                                     IsChecked="{Binding UseGlobalMemory}"
                                     GroupName="MemoryType"/>
                        
                        <RadioButton Content="自动配置"
                                     IsChecked="{Binding UseCustomMemory}"
                                     GroupName="MemoryType"
                                     Margin="0,10,0,0"/>
                        
                        <RadioButton Content="自定义"
                                     IsChecked="{Binding IsCustomMemory}"
                                     GroupName="MemoryType"
                                     Margin="0,10,0,0"/>
                        
                        <Slider Value="{Binding MemorySliderValue}"
                                Minimum="0"
                                Maximum="100"
                                Margin="30,10,0,0"
                                IsEnabled="{Binding IsCustomMemory}"/>
                    </StackPanel>
                    
                    <TextBlock Text="启动游戏前进行内存优化"
                               Margin="0,5,0,5"/>
                    
                    <ComboBox SelectedItem="{Binding MemoryOptimization}"
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="跟随全局设置"/>
                    </ComboBox>
                    
                    <Grid ColumnDefinitions="*,*" Margin="0,15,0,0">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="已使用内存"
                                       Margin="0,0,0,5"
                                       Foreground="#616161"/>
                            
                            <TextBlock Text="{Binding UsedMemory, StringFormat='{}{0:F1} GB / {1:F1} GB'}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="游戏分配"
                                       Margin="0,0,0,5"
                                       Foreground="#616161"/>
                            
                            <TextBlock Text="{Binding GameMemory, StringFormat='{}{0:F1} GB'}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 服务器 -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <StackPanel>
                    <TextBlock Text="服务器" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="0,5">
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="登录方式:" 
                                   Width="100"
                                   VerticalAlignment="Center"/>
                        
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  SelectedItem="{Binding ServerLoginMethod}" 
                                  HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="正版登录或离线登录"/>
                        </ComboBox>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="自动进入服务器:" 
                                   Width="100"
                                   VerticalAlignment="Center"
                                   Margin="0,15,0,0"/>
                        
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding ServerAutoJoin}" 
                                 Margin="0,15,0,0"
                                 Watermark="留空则不自动进入任何服务器"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 高级启动选项 -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <StackPanel>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="高级启动选项" 
                                   FontSize="16" 
                                   FontWeight="Bold"/>
                        
                        <Button Grid.Column="1"
                                Content="∧"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="4"
                                FontWeight="Bold"/>
                    </Grid>
                    
                    <TextBox Text="{Binding AdvancedLaunchOptions}" 
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl> 