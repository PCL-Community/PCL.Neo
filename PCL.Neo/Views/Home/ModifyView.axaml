<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCL.Neo.ViewModels.Home"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PCL.Neo.Views.Home.ModifyView"
             x:DataType="vm:GameSettingsViewModel">
    
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            <!-- 提示信息 -->
            <Border Background="#E3F2FD"
                    CornerRadius="4"
                    Padding="12"
                    BorderBrush="#2196F3"
                    BorderThickness="0,0,0,0">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Path Grid.Column="0"
                          Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                          Fill="#2196F3"
                          Width="16"
                          Height="16"
                          Margin="0,0,8,0"/>
                    
                    <TextBlock Grid.Column="1"
                              Text="在修改版本之后，请手动补入 Fabric API 或 OSL / QFAPI的安装情况，重复安装会导致游戏崩溃。"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2"
                            Content="×"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="4"
                            Foreground="#2196F3"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>
            
            <!-- 警告信息 -->
            <Border Background="#FFEBEE"
                    CornerRadius="4"
                    Padding="12"
                    BorderBrush="#F44336"
                    BorderThickness="0,0,0,0">
                <Grid ColumnDefinitions="Auto,*">
                    <Path Grid.Column="0"
                          Data="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z"
                          Fill="#F44336"
                          Width="16"
                          Height="16"
                          Margin="0,0,8,0"/>
                    
                    <TextBlock Grid.Column="1"
                              Text="你尚未选择安装 Fabric API，这会导致大多数 Mod 无法使用！"
                              TextWrapping="Wrap"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- 版本信息 -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*">
                    <Image Grid.Column="0"
                           Source="avares://PCL.Neo/Assets/Icon.ico"
                           Width="32"
                           Height="32"
                           Margin="0,0,15,0"
                           VerticalAlignment="Top"/>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding PackageName}" 
                                   FontSize="16" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding PackageDescription}" 
                                   Foreground="#616161"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Minecraft -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="Minecraft"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <Image Grid.Column="1"
                           Source="avares://PCL.Neo/Assets/Icon.ico"
                           Width="16"
                           Height="16"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                    
                    <Button Grid.Column="2"
                            Content="修改"
                            Padding="10,5"
                            VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Forge -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="Forge"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="与Fabric不兼容"
                               Margin="10,0,0,0"
                               Foreground="#9E9E9E"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- NeoForge -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="NeoForge"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="与Fabric不兼容"
                               Margin="10,0,0,0"
                               Foreground="#9E9E9E"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Fabric -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                    <TextBlock Grid.Column="0"
                               Text="Fabric"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="0.15.7"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2"
                            Content="×"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,0"
                            Foreground="#F44336"
                            VerticalAlignment="Center"
                            FontWeight="Bold"/>
                    
                    <Button Grid.Column="3"
                            Content="→"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Foreground="#2196F3"
                            VerticalAlignment="Center"
                            FontWeight="Bold"/>
                </Grid>
            </Border>
            
            <!-- Fabric API -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="Fabric API"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="点击选择"
                               Margin="10,0,0,0"
                               Foreground="#2196F3"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2"
                            Content="→"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Foreground="#2196F3"
                            VerticalAlignment="Center"
                            FontWeight="Bold"/>
                </Grid>
            </Border>
            
            <!-- Quilt -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="Quilt"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="与Fabric不兼容"
                               Margin="10,0,0,0"
                               Foreground="#9E9E9E"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- OptiFine -->
            <Border Background="White"
                    CornerRadius="4"
                    Padding="15"
                    BoxShadow="0 2 10 0 #20000000">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock Grid.Column="0"
                               Text="OptiFine"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="点击选择"
                               Margin="10,0,0,0"
                               Foreground="#2196F3"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="2"
                            Content="→"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Foreground="#2196F3"
                            VerticalAlignment="Center"
                            FontWeight="Bold"/>
                </Grid>
            </Border>
            
            <!-- 开始修改按钮 -->
            <Button Command="{Binding StartModifyCommand}"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Padding="20,10"
                    Background="#2196F3"
                    Foreground="White"
                    CornerRadius="20">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#1E88E5"/>
                    </Style>
                </Button.Styles>
                
                <StackPanel Orientation="Horizontal">
                    <Path Data="M5,3C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H5M5,5H19V19H5V5M7,7V9H17V7H7M7,11V13H17V11H7M7,15V17H14V15H7Z"
                          Fill="White"
                          Width="16"
                          Height="16"
                          Margin="0,0,8,0"/>
                    <TextBlock Text="开始修改"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl> 