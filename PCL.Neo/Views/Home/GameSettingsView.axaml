<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PCL.Neo.ViewModels.Home"
             xmlns:local="clr-namespace:PCL.Neo.Views.Home"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PCL.Neo.Views.Home.GameSettingsView"
             x:DataType="vm:GameSettingsViewModel"
             x:Name="root">
    
    <Grid>
        <!-- 蓝色顶部栏 -->
        <Grid VerticalAlignment="Top" 
              Height="48" 
              Background="#1E88E5" 
              ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 返回按钮 -->
            <Button Grid.Column="0" 
                    Height="48"
                    Width="48"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ReturnCommand}"
                    CommandParameter="{Binding}"
                    Padding="12"
                    VerticalAlignment="Center">
                <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                      Fill="White" 
                      Stretch="Uniform"/>
            </Button>
            
            <!-- 版本标题 -->
            <TextBlock Grid.Column="1" 
                       Text="{Binding VersionTitle, StringFormat='版本设置 - {0}'}" 
                       VerticalAlignment="Center"
                       Foreground="White"
                       Margin="10,0,0,0"
                       FontSize="18"/>
            
            <!-- 最小化和关闭按钮 -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Width="48" 
                        Height="48" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Padding="16">
                    <Path Data="M20,14H4V10H20" 
                          Fill="White" 
                          Stretch="Uniform"/>
                </Button>
                
                <Button Width="48" 
                        Height="48" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Padding="16">
                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                          Fill="White" 
                          Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- 主内容区 -->
        <Grid Margin="0,48,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧导航菜单 -->
            <Grid Grid.Column="0" 
                  Background="#F5F5F5">
                
                <!-- 分类标题 -->
                <StackPanel>
                    <TextBlock Text="游戏本体" 
                               Margin="10,10,10,5" 
                               Foreground="#757575" 
                               FontSize="12"/>
                    
                    <!-- 导航按钮 -->
                    <ListBox Background="Transparent" 
                             BorderThickness="0" 
                             Padding="0" 
                             SelectedIndex="{Binding SelectedMenuIndex}">
                        <ListBoxItem Height="40" Padding="10,0">
