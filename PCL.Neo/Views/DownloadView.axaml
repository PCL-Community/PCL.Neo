<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pc="using:PCL.Neo.Controls"
             xmlns:vm="using:PCL.Neo.ViewModels"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="450"
             x:Class="PCL.Neo.Views.DownloadView"
             x:DataType="vm:DownloadViewModel">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="DownloadLeftView"/>
        <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
        <pc:MyButton
            Text="Navigate to GameView"
            ColorType="Highlight"
            Height="50"
            Margin="10"
            Command="{Binding NavigateToDownloadGameCommand}"/>
        <pc:MyButton
            Text="Navigate to ModView"
            ColorType="Highlight"
            Height="50"
            Margin="10"
            Command="{Binding NavigateToDownloadModCommand}"/>
        <pc:MyButton
            Text="Test1"
            ColorType="Highlight"
            Height="50"
            Margin="10"
            Command="{Binding Btn_Test1Command}"/>
        <pc:MyButton
            Text="Test2"
            ColorType="Highlight"
            Height="50"
            Margin="10"
            Command="{Binding Btn_Test2Command}"/>
    </StackPanel>
</UserControl>

